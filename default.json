{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "group:allDigest",
    "group:recommended",
    "group:monorepos",
    ":prHourlyLimit2",
    ":automergeRequireAllStatusChecks",
    "schedule:automergeNonOfficeHours"
  ],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["*postgres*", "*mysql*", "*mariadb*"],
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false,
      "reviewers": ["cubismod"],
      "reviewersApprovalCount": 1
    },
    {
      "matchUpdateTypes": ["patch", "pin", "digest", "pinDigest"],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "ghcr.io/astral-sh/uv",
        "uv",
        "*boto*",
        "*ruff*",
        "ghcr.io/renovatebot/renovate",
        "astral-sh/setup-uv"
      ],
      "schedule": "* 0-3 * * 1"
    },
    {
      "matchPackageNames": ["*pydantic*"],
      "groupName": "pydantic"
    },
    {
      "matchPackageNames": ["*boto*"],
      "groupName": "boto"
    },
    {
      "matchPackageNames": ["*hugo*"],
      "groupName": "hugo",
      "automerge": true
    },
    {
      "matchPackageNames": ["ghcr.io/astral-sh/uv", "uv"],
      "groupName": "uv",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "assignees": ["cubismod"]
}
