{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "group:allDigest",
    "group:recommended",
    "group:monorepos",
    ":prHourlyLimit4",
    ":automergeRequireAllStatusChecks"
  ],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "pinDigest"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "assignees": ["cubismod"],
  "schedule": [
    "* 0-4,17-23 * * 1-5", "* * * * 0,6"
  ]
}
